{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [      // <-- Adicionamos esta propriedade
      "ES2019", // <-- Para reconhecer o .flatMap e outras funções modernas
      "DOM"     // <-- Para garantir que funções como 'fetch' são reconhecidas
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}